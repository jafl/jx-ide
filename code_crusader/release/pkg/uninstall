#!/bin/bash

PRE=$1;
if [[ -z $PRE ]]; then
	PRE=/usr;
fi

BIN=$PRE/bin;
DOC=$PRE/share/doc/code_crusader;
LIB=$PRE/lib/jxcb;
APP=$PRE/share/applications;
ICON=$PRE/share/pixmaps;

rm -f  $BIN/jcc;
rm -f  $BIN/code_crusader;
rm -f  $BIN/xml-auto-close;
rm -f  $BIN/html-auto-close;
rm -rf $LIB;
rm -rf $DOC;
rm -f  `find $APP -name 'code_crusader*.desktop'`;
rm -f  `find $ICON -name 'code_crusader*.xpm'`;
