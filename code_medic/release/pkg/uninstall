#!/bin/bash

PRE=$1;
if [[ -z $PRE ]]; then
	PRE=/usr/local;
fi

BIN=$PRE/bin;
DOC=$PRE/share/doc/code-medic;
APP=$PRE/share/applications;
ICON=$PRE/share/pixmaps;

rm -f  $BIN/medic $BIN/code-medic;
rm -rf $DOC;
rm -f  `find $APP -name 'code_medic*.desktop'`;
rm -f  `find $ICON -name 'code_medic*.xpm'`;
