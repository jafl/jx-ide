#!/bin/bash

set -e;

SYS=`uname -o || uname -s`;		# Darwin doesn't support -o

if [[ $UID != 0 ]]; then
	SUDO="sudo";
fi

if [[ $1 == release || $1 == ci ]]; then
	echo -n 1 >| 0-RELEASE;
fi

if [[ $SYS == Darwin ]]; then

	if ! command -v brew; then
		echo Installing Homebrew...;
		sudo /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)";
	fi

	if [[ $1 != ci ]]; then
		brew tap jafl/jx;
		brew bundle;
	fi

elif command -v apt-get; then

	# debian

	LLDB_VERS=11

	$SUDO apt update;
	$SUDO apt -y install libeditorconfig-dev llvm liblldb-$LLDB_VERS-dev;

	if [[ $1 != ci && ! -f ../JX/Makefile && -z $JX_ROOT ]]; then
		curl -O http://libjx.sourceforge.net/release/jx-application-framework.deb
		sudo apt install ./jx-application-framework.deb
	fi

	rm -f code_medic/lldb-include;
	ln -sf /usr/lib/llvm-$LLDB_VERS/include code_medic/lldb-include;

	rm -f code_medic/liblldb.so;
	ln -sf /usr/lib/llvm-$LLDB_VERS/lib/liblldb.so.1 code_medic/liblldb.so;

elif command -v dnf || command -v yum; then

	# redhat

	if command -v dnf; then
		PKGMGR=dnf;
	else
		PKGMGR=yum;
	fi

	$SUDO $PKGMGR -y install editorconfig-devel lldb-devel llvm-devel;

elif command -v zypper; then

	# openSUSE

	$SUDO zypper -in install editorconfig-devel lldb llvm-devel;

	# lldb-devel is missing
	rm -f code_medic/lldb-include;
	ln -sf ../misc/lldb-include code_medic;

else

	echo "Unrecognized system!  Please file an issue on github.";
	exit 1;

fi

if [[ ! -d /usr/local/include/reflex/ ]]; then

	echo "Please install RE/flex library.";
	exit 1;

fi

if [[ ! -d /usr/local/include/jx-af/ && ! -f ../JX/Makefile && -z $JX_ROOT ]]; then

	echo "Please install jx-application-framework.";
	exit 1;

fi
